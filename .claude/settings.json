{
  "permissions": {
    "deny": [
      "Read(**/.env*)",
      "Read(**/*.pem)",
      "Read(**/*.key)",
      "Read(**/*.cert)",
      "Read(**/*.crt)",
      "Read(**/secrets.yml)"
    ]
  },
  "sandbox": {
    "enabled": true
  },
  "statusLine": {
    "command": "~/.claude/statusline.sh",
    "type": "command"
  }
}
