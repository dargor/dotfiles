{

  // https://code.visualstudio.com/docs/getstarted/settings

  "diffEditor.codeLens": true,

  "editor.fontFamily": "Monaspace Krypton",
  "editor.fontLigatures": false,
  "editor.fontSize": 11,
  "editor.minimap.showSlider": "always",
  "editor.renderLineHighlight": "all",
  "editor.rulers": [79],
  "editor.unicodeHighlight.allowedCharacters": {
    "α": true
  },

  "extensions.ignoreRecommendations": true,

  "files.associations": {
    ".rgignore": "ignore",
    ".bandit": "ini",
    ".sentryclirc": "ini",
    "Makefile.*": "makefile",
    ".dockerignore": "ignore",
    ".helmignore": "ignore",
    "*.avsc": "json"
  },
  "files.exclude": {
    "**/.*.swp": true,
    "**/__pycache__": true,
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true
  },

  "git.countBadge": "tracked",
  "git.defaultBranchName": "master",
  "git.enableStatusBarSync": false,
  "git.openRepositoryInParentFolders": "always",

  "notebook.lineNumbers": "on",

  "security.workspace.trust.banner": "always",
  "security.workspace.trust.startupPrompt": "always",

  "terminal.integrated.confirmOnKill": "always",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.enableFileLinks": "notRemote",
  "terminal.integrated.enableImages": false,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.fontFamily": "Monaspace Krypton",
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.macOptionClickForcesSelection": true,
  "terminal.integrated.sendKeybindingsToShell": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.tabs.focusMode": "singleClick",
  "terminal.integrated.tabs.hideCondition": "singleGroup",

  "workbench.colorTheme": "Gruvbox Dark Medium",
  "workbench.fontAliasing": "auto",
  "workbench.startupEditor": "none",
  "workbench.tree.renderIndentGuides": "always",

  // extensions

  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter"
  },

  "cSpell.allowCompoundWords": true,

  "gitlens.currentLine.format": "${author}, ${ago} • ${message}",
  "gitlens.plusFeatures.enabled": false,

  "jupyter.askForKernelRestart": false,

  "makefile.configureOnOpen": false,

  "redhat.telemetry.enabled": true,

  "rust-analyzer.rust.analyzerTargetDir": true,

  "todo-tree.filtering.excludeGlobs": [
    "**/node_modules/*/**",
    ".venv/"
  ],
  "todo-tree.general.statusBar": "current file",
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.tree.expanded": true,
  "todo-tree.tree.showCountsInTree": true,

  "vs-kubernetes": {
    "vs-kubernetes.crd-code-completion": "enabled"
  }

}
