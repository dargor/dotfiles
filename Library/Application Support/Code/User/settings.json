{
  "breadcrumbs.enabled": false,
  "chat.commandCenter.enabled": false,
  "diffEditor.codeLens": true,
  "editor.fontFamily": "Monaspace Krypton",
  "editor.fontLigatures": false,
  "editor.fontSize": 11,
  "editor.inlayHints.maximumLength": 0,
  "editor.lightbulb.enabled": "off",
  "editor.lineHeight": 1.2,
  "editor.minimap.enabled": false,
  "editor.minimap.showSlider": "always",
  "editor.renderLineHighlight": "all",
  "editor.scrollbar.horizontal": "hidden",
  "editor.scrollbar.vertical": "visible",
  "editor.stickyScroll.enabled": false,
  "editor.unicodeHighlight.allowedCharacters": {
    "α": true,
    "σ": true
  },
  "extensions.ignoreRecommendations": true,
  "files.associations": {
    ".rgignore": "ignore",
    ".bandit": "ini",
    ".sentryclirc": "ini",
    "Makefile.*": "makefile",
    ".dockerignore": "ignore",
    ".helmignore": "ignore",
    "*.avsc": "json"
  },
  "files.exclude": {
    "**/.*.swp": true,
    "**/__pycache__": true
  },
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.watcherExclude": {
    "**/.bloop": true,
    "**/.metals": true,
    "**/.ammonite": true,
    "**/target": true
  },
  "git.countBadge": "tracked",
  "git.defaultBranchName": "master",
  "git.enableStatusBarSync": false,
  "git.openRepositoryInParentFolders": "always",
  "security.workspace.trust.banner": "always",
  "security.workspace.trust.startupPrompt": "always",
  "terminal.integrated.confirmOnKill": "always",
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.enableFileLinks": "notRemote",
  "terminal.integrated.enableImages": false,
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "terminal.integrated.enablePersistentSessions": false,
  "terminal.integrated.environmentChangesRelaunch": false,
  "terminal.integrated.fontFamily": "Monaspace Krypton",
  "terminal.integrated.fontLigatures": false,
  "terminal.integrated.fontSize": 11,
  "terminal.integrated.lineHeight": 1.1,
  "terminal.integrated.macOptionClickForcesSelection": true,
  "terminal.integrated.macOptionIsMeta": false,
  "terminal.integrated.minimumContrastRatio": 1,
  "terminal.integrated.persistentSessionReviveProcess": "never",
  "terminal.integrated.rightClickBehavior": "default",
  "terminal.integrated.sendKeybindingsToShell": true,
  "terminal.integrated.shellIntegration.decorationsEnabled": "never",
  "terminal.integrated.showExitAlert": false,
  "terminal.integrated.suggest.enabled": false,
  "terminal.integrated.tabs.focusMode": "singleClick",
  "terminal.integrated.tabs.hideCondition": "singleGroup",
  "workbench.colorTheme": "Catppuccin Latte",
  "workbench.fontAliasing": "auto",
  "workbench.secondarySideBar.showLabels": false,
  "workbench.startupEditor": "none",
  "workbench.tree.renderIndentGuides": "always",
  "ansible.lightspeed.enabled": false,
  "catppuccin.italicKeywords": false,
  "catppuccin.italicComments": false,
  "catppuccin.boldKeywords": false,
  "python.analysis": {
    "diagnosticMode": "workspace",
    "typeCheckingMode": "standard",
    "inlayHints": {
      "callArgumentNames": true,
      "functionReturnTypes": true,
      "variableTypes": true
    }
  },
  "[python]": {
    "editor.defaultFormatter": "charliermarsh.ruff",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports.ruff": "explicit",
      "source.fixAll.ruff": "explicit"
    }
  },
  "ruff.configurationPreference": "filesystemFirst",
  "ruff.lint.select": [
    "ALL"
  ],
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning",
    "info",
    "hint"
  ],
  "errorLens.messageBackgroundMode": "message",
  "workbench.colorCustomizations": {
    "betterGitLineBlame.foregroundColor": "#A0A0A0"
  },
  "llama-vscode.endpoint": "http://localhost:1336/",
  "llama-vscode.max_line_suffix": 80,
  "llama-vscode.show_info": false,
  "llama-vscode.rag_enabled": false,
  "makefile.configureOnOpen": false,
  "redhat.telemetry.enabled": true,
  "[rust]": {
    "editor.formatOnSave": true
  },
  "rust-analyzer.cargo.targetDir": true,
  "rust-analyzer.check.command": "clippy",
  "rust-analyzer.inlayHints.closingBraceHints.minLines": 0,
  "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "always",
  "rust-analyzer.inlayHints.lifetimeElisionHints.enable": "skip_trivial",
  "rust-analyzer.inlayHints.lifetimeElisionHints.useParameterNames": true,
  "rust-analyzer.inlayHints.maxLength": null,
  "typescript.inlayHints.parameterNames.enabled": "all",
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "todo-tree.filtering.excludeGlobs": [
    "**/node_modules/*/**",
    ".venv/"
  ],
  "todo-tree.general.statusBar": "current file",
  "todo-tree.highlights.useColourScheme": true,
  "todo-tree.tree.expanded": true,
  "todo-tree.tree.showCountsInTree": true,
  "vs-kubernetes": {
    "vs-kubernetes.crd-code-completion": "enabled"
  }
}
