[help]
    autocorrect = 0

[color]
    ui = true

[delta]
    paging = never
    max-line-length = 0
    minus-style = 1
    plus-style = 2
    zero-style = 8

[color "diff"]
    meta = magenta
    frag = yellow
    func = yellow
    old = red
    new = green
    whitespace = reverse bold red

[core]
    pager = less -RFX
    editor = vim
    excludesfile = ~/.gitignore
    attributesfile = ~/.gitattributes

[diff]
    tool = meld

[diff "gpg"]
    textconv = gpg --decrypt --batch --no-tty --quiet

[difftool]
    prompt = false

[difftool "meld"]
    cmd = meld "$LOCAL" "$REMOTE"

[merge]
    tool = meld

[mergetool]
    prompt = false

[mergetool "meld"]
    cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"

[pull]
    ff = only

[rebase]
    abbreviateCommands = true
    missingCommitsCheck = warn
    empty = drop

[push]
    default = simple
    followTags = true
    signed = if-asked

[commit]
    gpgsign = true
    verbose = true

[alias]
    r = remote -v
    t = tag -n
    b = branch --verbose
    c = commit --signoff
    lea = add --patch
    eax = commit --amend --no-edit
    graph = log --graph --oneline --decorate
    elog = log --show-signature
    wdiff = diff --word-diff
    fpush = push --force
    oops = commit --amend
    forget = reset --hard HEAD~1
    fuck = reset --hard ORIG_HEAD
    pfetch = fetch origin --prune
    pfetchtags = fetch origin --prune --prune-tags
    ptags = push --tags
    sdiff = stash show -p
    slist = stash list
    spop = stash pop
    mdev = merge develop --ff-only
    tdescribe = describe --tags
