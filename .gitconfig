[user]
name = Gabriel Linder
email = linder.gabriel@gmail.com

[help]
autocorrect = -1

[color]
ui = true

[core]
editor = vim

[diff]
tool = meld

[difftool]
prompt = false

[difftool "meld"]
cmd = meld "$LOCAL" "$REMOTE"

[merge]
tool = meld

[mergetool]
prompt = false

[mergetool "meld"]
cmd = meld "$LOCAL" "$MERGED" "$REMOTE" --output "$MERGED"
#cmd = meld "$LOCAL" "$BASE" "$REMOTE" --output "$MERGED"

[pull]
rebase = true

[push]
default = simple
followTags = true

[pager]
stash = false

[alias]
t = tag -n
b = branch --verbose --all
c = commit --verbose --signoff
eax = commit --amend --no-edit
graph = log --graph --oneline --decorate
wdiff = diff --word-diff
fpush = push --force
fuck = reset --hard ORIG_HEAD
pfetch = fetch origin --prune
