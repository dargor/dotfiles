{
  "buffer_font_family": "Monaspace Krypton",
  "buffer_font_features": {
    "calt": false
  },
  "buffer_font_fallbacks": [
    "MonaspiceKr Nerd Font"
  ],
  "buffer_font_size": 11,
  "buffer_line_height": {
    "custom": 1.2
  },
  "scrollbar": {
    "show": "always",
    "axes": {
      "horizontal": false
    }
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python.analysis": {
          "typeCheckingMode": "off"
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "configurationPreference": "filesystemFirst",
          "lint": {
            "select": [
              "ALL"
            ]
          }
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "targetDir": true
        },
        "check": {
          "command": "clippy"
        },
        "inlayHints": {
          "closingBraceHints": {
            "minLines": 0
          },
          "closureReturnTypeHints": {
            "enable": "always"
          },
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "maxLength": null
        }
      }
    }
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.venv",
    "**/.DS_Store",
    "**/Thumbs.db"
  ],
  "file_types": {
    "Ansible": [
      "**.ansible.yml",
      "**/defaults/**.yml",
      "**/defaults/**.yaml",
      "**/meta/**.yml",
      "**/meta/**.yaml",
      "**/tasks/**.yml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/host_vars/**.yml",
      "**/host_vars/**.yaml",
      "**/group_vars/**.yml",
      "**/group_vars/**.yaml",
      "**playbook*.yaml",
      "**playbook*.yml"
    ],
    "Dockerfile": [
      "Dockerfile.*"
    ],
    "Git Ignore": [
      ".dockerignore",
      ".helmignore",
      ".rgignore"
    ],
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ],
    "JSON": [
      "*.avsc"
    ],
    "Make": [
      "Makefile.*"
    ],
    "Python constraints": [
      "constraints.txt",
      "constraints-*.txt",
      "constraints_*.txt",
      "*-constraints.txt",
      "*_constraints.txt"
    ],
    "Python requirements": [
      "**/requirements/*.txt",
      "requirements.txt",
      "requirements-*.txt",
      "requirements_*.txt",
      "*-requirements.txt",
      "*_requirements.txt"
    ],
    "ini": [
      ".bandit",
      ".sentryclirc",
      "setup.cfg"
    ],
    "tmux": [
      ".tmux.conf"
    ]
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true
    }
  },
  "inlay_hints": {
    "enabled": true,
    "show_background": true
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "editor_width"
    },
    "Python": {
      "language_servers": [
        "pyright",
        "ruff"
      ],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "wrap_guides": [
    79
  ],
  "terminal": {
    "blinking": "off",
    "copy_on_select": true,
    "line_height": {
      "custom": 1.2
    },
    "scrollbar": {
      "show": "never"
    },
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "theme": {
    "mode": "light",
    "light": "Catppuccin Latte - No Italics",
    "dark": "Catppuccin Frapp√© - No Italics"
  },
  "project_panel": {
    "entry_spacing": "standard"
  },
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "openai",
      "model": "qwen2.5-coder"
    }
  },
  "language_models": {
    "openai": {
      "version": "1",
      "api_url": "http://localhost:1337/v1",
      "available_models": [
        {
          "name": "qwen2.5-coder",
          "display_name": "Qwen 2.5 Coder",
          "max_tokens": 16384
        }
      ]
    }
  },
  "ui_font_features": {
    "calt": false
  }
}
