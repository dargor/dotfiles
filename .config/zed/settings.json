// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "buffer_font_family": "Monaspace Krypton",
  "buffer_font_fallbacks": ["MonaspiceKr Nerd Font"],
  "buffer_font_size": 13,
  "tabs": {
    "file_icons": true
  },
  "inlay_hints": {
    "enabled": true
  },
  "languages": {
    "Markdown": {
      "soft_wrap": "editor_width"
    }
  },
  "wrap_guides": [79],
  "terminal": {
    "blinking": "off",
    "copy_on_select": true,
    "line_height": {
      "custom": 1.0
    }
  },
  "theme": {
    "mode": "dark",
    "light": "Gruvbox Light",
    "dark": "Gruvbox Dark"
  },
  "assistant": {
    "version": "2",
    "default_model": {
      "provider": "ollama",
      "model": "qwen2.5-coder:14b-instruct-q8_0"
    }
  },
  "language_models": {
    "ollama": {
      "available_models": [
        {
          "name": "qwen2.5-coder:14b-instruct-q8_0",
          "max_tokens": 8192
        }
      ]
    }
  }
}
