{
  "disable_ai": false,
  "buffer_font_family": "Monaspace Krypton",
  "buffer_font_features": {
    "calt": true,
    "liga": true
  },
  "buffer_font_size": 11,
  "buffer_line_height": {
    "custom": 1.2
  },
  "ui_font_size": 15,
  "hide_mouse": "never",
  "snippet_sort_order": "none",
  "unnecessary_code_fade": 0.5,
  "use_system_path_prompts": false,
  "use_system_prompts": false,
  "confirm_quit": true,
  "indent_guides": {
    "active_line_width": 3,
    "coloring": "indent_aware"
  },
  "title_bar": {
    "show_branch_icon": true
  },
  "scrollbar": {
    "show": "always",
    "axes": {
      "horizontal": false
    }
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
    "show_diagnostics": "all"
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "lsp": {
    "cargo-tom": {
      "initialization_options": {
        "hide_docs_info_message": true
      }
    },
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--out-format",
          "json",
          "--issues-exit-code=1"
        ]
      }
    },
    "metals": {
      "settings": {
        "inlayHints": {
          "inferredTypes": {
            "enable": true
          },
          "implicitArguments": {
            "enable": true
          },
          "implicitConversions": {
            "enable": true
          },
          "typeParameters": {
            "enable": true
          },
          "hintsInPatternMatch": {
            "enable": true
          }
        }
      }
    },
    "basedpyright": {
      "settings": {
        "basedpyright.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "strict"
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "configurationPreference": "filesystemFirst",
          "lint": {
            "select": [
              "ALL"
            ]
          }
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "targetDir": true
        },
        "check": {
          "command": "clippy"
        },
        "inlayHints": {
          "closingBraceHints": {
            "minLines": 0
          },
          "closureReturnTypeHints": {
            "enable": "always"
          },
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "maxLength": null
        }
      }
    },
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      },
      "settings": {
        "use_bundler": false
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "customTags": [
            "!vault scalar"
          ]
        }
      }
    }
  },
  "show_signature_help_after_edits": true,
  "inline_code_actions": false,
  "file_scan_exclusions": [
    "**/.git",
    "**/.swp",
    "**/.*.swp",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/*.egg-info",
    "**/.*_cache",
    "**/.tox",
    "**/.venv",
    "**/__pycache__",
    "**/build",
    "**/dist",
    "**/target"
  ],
  "file_types": {
    "Ansible": [
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/host_vars/*.yml",
      "**/host_vars/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/playbooks/*.yaml",
      "**/playbooks/*.yml",
      "**playbook*.yaml",
      "**playbook*.yml"
    ],
    "Diff": [
      "*.patch"
    ],
    "Dockerfile": [
      "Dockerfile.*"
    ],
    "Git Ignore": [
      ".*ignore"
    ],
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ],
    "Jinja2": [
      "*.j2"
    ],
    "JSON": [
      "*.avsc",
      "*.ipynb"
    ],
    "Make": [
      "Makefile.*"
    ],
    "Python constraints": [
      "*constraints*.txt"
    ],
    "Python requirements": [
      "**/requirements/*.{in,txt}",
      "*requirements*.{in,txt}"
    ],
    "env": [
      ".env",
      ".env.*"
    ],
    "ini": [
      ".bandit",
      ".sentryclirc",
      "setup.cfg"
    ],
    "tmux": [
      ".tmux.conf"
    ]
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "edit_predictions": {
    "enabled_in_text_threads": false
  },
  "inlay_hints": {
    "enabled": true
  },
  "languages": {
    "Go": {
      "language_servers": [
        "gopls",
        "golangci-lint"
      ]
    },
    "Nginx": {
      "language_servers": [
        "!nginx"
      ]
    },
    "Python": {
      "language_servers": [
        "basedpyright",
        "ruff"
      ],
      "formatter": [
        {
          "code_action": "source.organizeImports.ruff"
        },
        {
          "code_action": "source.fixAll.ruff"
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Shell Script": {
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": [
            "--filename",
            "{buffer_path}",
            "--indent",
            "4",
            "--simplify"
          ]
        }
      }
    },
    "TOML": {
      "formatter": {
        "language_server": {
          "name": "toml"
        }
      }
    },
    "YAML": {
      "language_servers": [
        "yaml-language-server",
        "!docker-compose"
      ]
    },
    "reST": {
      "language_servers": [
        "!esbonio"
      ]
    }
  },
  "diagnostics_max_severity": null,
  "terminal": {
    "blinking": "off",
    "copy_on_select": true,
    "line_height": {
      "custom": 1.2
    },
    "scrollbar": {
      "show": "never"
    }
  },
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte - No Italics",
    "dark": "Catppuccin Frappé - No Italics"
  },
  "theme_overrides": {
    "Catppuccin Latte - No Italics": {
      "scrollbar.thumb.hover_background": "#8839ef63"
    },
    "Catppuccin Frappé - No Italics": {
      "scrollbar.thumb.hover_background": "#c6a0f663"
    }
  },
  "project_panel": {
    "entry_spacing": "standard",
    "sticky_scroll": false,
    "scrollbar": {
      "show": "never"
    }
  },
  "agent": {
    "stream_edits": true,
    "enable_feedback": false,
    "message_editor_min_lines": 6,
    "default_profile": "write",
    "default_model": {
      "provider": "localhost",
      "model": "chat-big"
    },
    "inline_assistant_model": {
      "provider": "localhost",
      "model": "chat-big"
    }
  },
  "language_models": {
    "openai_compatible": {
      "localhost": {
        "api_url": "http://localhost:1337/v1",
        "available_models": [
          {
            "name": "chat-small",
            "display_name": "Qwen3-4B-Instruct-2507",
            "max_tokens": 16384
          },
          {
            "name": "chat-big",
            "display_name": "Qwen3-30B-A3B-Instruct-2507",
            "max_tokens": 131072
          }
        ]
      }
    }
  }
}
