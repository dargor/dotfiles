{
  "buffer_font_family": "Monaspace Krypton",
  "buffer_font_features": {
    "calt": false
  },
  "buffer_font_fallbacks": [
    "MonaspiceKr Nerd Font"
  ],
  "buffer_font_size": 11,
  "buffer_line_height": {
    "custom": 1.2
  },
  "ui_font_size": 15,
  "agent_font_size": 15,
  "hide_mouse": "never",
  "use_system_path_prompts": false,
  "use_system_prompts": false,
  "confirm_quit": true,
  "minimap": {
    "show": "never",
    "thumb_border": "none"
  },
  "scrollbar": {
    "show": "always",
    "axes": {
      "horizontal": false
    }
  },
  "tabs": {
    "file_icons": true,
    "git_status": true
  },
  "toolbar": {
    "breadcrumbs": false,
    "quick_actions": false
  },
  "lsp": {
    "cargotom": {
      "initialization_options": {
        "offline": false,
        "stable": false,
        "per_page_web": 50
      }
    },
    "golangci-lint": {
      "initialization_options": {
        "command": [
          "golangci-lint",
          "run",
          "--out-format",
          "json",
          "--issues-exit-code=1"
        ]
      }
    },
    "metals": {
      "settings": {
        "inlayHints": {
          "inferredTypes": {
            "enable": true
          },
          "implicitArguments": {
            "enable": true
          },
          "implicitConversions": {
            "enable": true
          },
          "typeParameters": {
            "enable": true
          },
          "hintsInPatternMatch": {
            "enable": true
          }
        }
      }
    },
    "pyright": {
      "settings": {
        "python.analysis": {
          "diagnosticMode": "workspace",
          "typeCheckingMode": "standard"
        }
      }
    },
    "ruff": {
      "initialization_options": {
        "settings": {
          "configurationPreference": "filesystemFirst",
          "lint": {
            "select": [
              "ALL"
            ]
          }
        }
      }
    },
    "rust-analyzer": {
      "initialization_options": {
        "cargo": {
          "targetDir": true
        },
        "check": {
          "command": "clippy"
        },
        "inlayHints": {
          "closingBraceHints": {
            "minLines": 0
          },
          "closureReturnTypeHints": {
            "enable": "always"
          },
          "lifetimeElisionHints": {
            "enable": "skip_trivial",
            "useParameterNames": true
          },
          "maxLength": null
        }
      }
    },
    "solargraph": {
      "initialization_options": {
        "diagnostics": true,
        "formatting": true
      },
      "settings": {
        "use_bundler": false
      }
    },
    "yaml-language-server": {
      "settings": {
        "yaml": {
          "customTags": [
            "!vault scalar"
          ]
        }
      }
    }
  },
  "auto_signature_help": true,
  "file_scan_exclusions": [
    "**/.git",
    "**/.venv",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/__pycache__"
  ],
  "file_types": {
    "Ansible": [
      "**.ansible.yml",
      "**.ansible.yaml",
      "**/defaults/*.yml",
      "**/defaults/*.yaml",
      "**/meta/*.yml",
      "**/meta/*.yaml",
      "**/tasks/*.yml",
      "**/tasks/*.yaml",
      "**/handlers/*.yml",
      "**/handlers/*.yaml",
      "**/host_vars/*.yml",
      "**/host_vars/*.yaml",
      "**/group_vars/*.yml",
      "**/group_vars/*.yaml",
      "**/playbooks/*.yaml",
      "**/playbooks/*.yml",
      "**playbook*.yaml",
      "**playbook*.yml"
    ],
    "Dockerfile": [
      "Dockerfile.*"
    ],
    "Git Ignore": [
      ".dockerignore",
      ".helmignore",
      ".rgignore"
    ],
    "Helm": [
      "**/templates/**/*.tpl",
      "**/templates/**/*.yaml",
      "**/templates/**/*.yml",
      "**/helmfile.d/**/*.yaml",
      "**/helmfile.d/**/*.yml"
    ],
    "JSON": [
      "*.avsc"
    ],
    "Make": [
      "Makefile.*"
    ],
    "Markdown": [
      ".rules",
      ".clinerules",
      ".cursorrules",
      ".windsurfrules"
    ],
    "Python constraints": [
      "*constraints*.txt"
    ],
    "Python requirements": [
      "**/requirements/*.{in,txt}",
      "*requirements*.{in,txt}"
    ],
    "env": [
      ".env.*"
    ],
    "ini": [
      ".bandit",
      ".sentryclirc",
      "setup.cfg"
    ],
    "tmux": [
      ".tmux.conf"
    ]
  },
  "diagnostics": {
    "inline": {
      "enabled": true
    }
  },
  "git": {
    "inline_blame": {
      "enabled": true,
      "show_commit_summary": true
    }
  },
  "edit_predictions": {
    "enabled_in_text_threads": false
  },
  "inlay_hints": {
    "enabled": true,
    "show_background": true
  },
  "languages": {
    "Go": {
      "language_servers": [
        "gopls",
        "golangci-lint"
      ]
    },
    "Markdown": {
      "soft_wrap": "editor_width"
    },
    "Python": {
      "language_servers": [
        "pyright",
        "ruff"
      ],
      "formatter": [
        {
          "code_actions": {
            "source.organizeImports.ruff": true,
            "source.fixAll.ruff": true
          }
        },
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    },
    "Shell Script": {
      "formatter": {
        "external": {
          "command": "shfmt",
          "arguments": [
            "--filename",
            "{buffer_path}",
            "--indent",
            "4",
            "--simplify"
          ]
        }
      }
    },
    "YAML": {
      "language_servers": [
        "yaml-language-server",
        "!docker-compose"
      ]
    }
  },
  "diagnostics_max_severity": null,
  "wrap_guides": [
    79,
    99,
    119
  ],
  "terminal": {
    "blinking": "off",
    "copy_on_select": true,
    "line_height": {
      "custom": 1.2
    },
    "scrollbar": {
      "show": "never"
    },
    "toolbar": {
      "breadcrumbs": false
    }
  },
  "theme": {
    "mode": "light",
    "light": "Catppuccin Latte - No Italics",
    "dark": "Catppuccin Frapp√© - No Italics"
  },
  "project_panel": {
    "entry_spacing": "standard",
    "scrollbar": {
      "show": "never"
    }
  },
  "agent": {
    "version": "2",
    "default_model": {
      "provider": "openai",
      "model": "qwen2.5-coder"
    },
    "inline_assistant_model": {
      "provider": "openai",
      "model": "qwen2.5-coder"
    },
    "default_profile": "minimal"
  },
  "language_models": {
    "openai": {
      "version": "1",
      "api_url": "http://localhost:1337/v1",
      "available_models": [
        {
          "name": "qwen2.5-coder",
          "display_name": "Qwen 2.5 Coder",
          "max_tokens": 16384
        }
      ]
    }
  }
}
