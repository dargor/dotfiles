#! /usr/bin/env bash

bindkey -e

gitbr() {
    local br
    br=$(git rev-parse --abbrev-ref HEAD 2>/dev/null)
    if [ -n "$br" ]; then
        if [ "$br" = "HEAD" ]; then
            echo "ðŸ’¥ %F{red}%B$br%b%f"
        else
            echo "ðŸŒµ %F{yellow}$br%f"
        fi
    fi
}

export PROMPT="%F{cyan}%D{%Y-%m-%d} %D{%H:%M:%S}%f %F{blue}%1~%f %B%(?.%F{green}âœ“.%F{red}âœ—)%f%b "
export RPROMPT="\$(gitbr)"
